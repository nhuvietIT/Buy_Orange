<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/colorPrimary" />
    <item android:bottom="550dp">
        <bitmap
            android:alpha="0.5"
            android:gravity="center"
            android:src="@drawable/adidas" />
    </item>

    <item
        android:bottom="-300dp"
        android:left="1dp"
        android:right="-300dp"
        android:top="250dp">
        <rotate
            android:fromDegrees="-10"
            android:pivotX="150%"
            android:pivotY="100%">
            <shape android:shape="rectangle">
                <solid android:color="@color/color_white" />
            </shape>
        </rotate>
    </item>

    <item
        android:bottom="50dp"
        android:left="50dp"
        android:right="50dp"
        android:top="570dp">
        <rotate
            android:fromDegrees="0"
            android:pivotX="0"
            android:pivotY="0"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="@color/color_Orange" />

                <corners
                     android:radius="0dp"/>
                <stroke
                    android:width="2dip"
                    android:color="@color/color_Orange" />
            </shape>

        </rotate>
    </item>
</layer-list>